{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    // TODO: Right now we're actually building wallet-specs
    //"noUnusedLocals": true,
    "outDir": "lib",
    "strict": false,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    // Turning this off throws this error for an unknown reason:
    // https://github.com/Microsoft/TypeScript/issues/26627
    "strictNullChecks": true,
    "target": "es2015",
    "types": ["react", "jest", "node"]
  },
  "include": ["src/**/*", "src/**/*.json", "contracts/**/*.json"],
  "references": [
    {
      "path": "../nitro-protocol"
    },
    {
      "path": "../devtools"
    }
  ]
}
